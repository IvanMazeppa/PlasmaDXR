{
  "profile": "hybrid_multi_probe",
  "_description": "HYBRID: Probe-grid (ambient) + Multi-light (4-8 lights for rim) - Target 90+ FPS with 90% quality",

  "rendering": {
    "particleCount": 10000,
    "rendererType": "gaussian",
    "width": 1920,
    "height": 1080
  },

  "lighting": {
    "_comment": "Additive lighting systems - BOTH enabled for hybrid approach",
    "multiLight": {
      "enabled": true,
      "lightCount": 4,
      "_comment": "Reduced from 16 to 4-8 lights - focus on rim lighting enhancement",
      "preset": "rim_enhanced",
      "intensity": 1.0,
      "blendWeight": 0.3
    },
    "probeGrid": {
      "enabled": true,
      "gridSize": 32,
      "raysPerProbe": 16,
      "intensity": 16000.0,
      "updateInterval": 4,
      "blendWeight": 0.7,
      "_comment": "Probe-grid provides base GI, multi-light adds rim detail (BOOSTED: 800→3000→8000 for SH visibility)",
      "coverage": {
        "min": [-1500, -1500, -1500],
        "max": [1500, 1500, 1500]
      }
    },
    "rtxdi": {
      "enabled": false,
      "mode": "M5",
      "temporalWeight": 0.9
    }
  },

  "effects": {
    "_comment": "Inline RayQuery effects (complementary to lighting systems)",
    "shadowRays": {
      "enabled": true,
      "preset": "performance",
      "_comment": "Use performance preset to maintain FPS budget",
      "raysPerPixel": 1,
      "temporalFiltering": true
    },
    "inScattering": {
      "enabled": true,
      "strength": 1.0
    },
    "phaseFunction": {
      "enabled": true,
      "strength": 5.0,
      "henyeyGreenstein": true
    },
    "volumetric": {
      "anisotropicGaussians": true,
      "anisotropyStrength": 1.0,
      "adaptiveRadius": true,
      "rtParticleToParticle": true,
      "rtLightingStrength": 2.0
    }
  },

  "physics": {
    "innerRadius": 10.0,
    "outerRadius": 300.0,
    "diskThickness": 50.0,
    "timeStep": 0.008333,
    "physicsEnabled": true,
    "blackHoleMass": 4300000.0,
    "alphaViscosity": 0.1
  },

  "camera": {
    "startDistance": 800.0,
    "startHeight": 400.0,
    "startAngle": 0.0,
    "startPitch": -0.3,
    "moveSpeed": 100.0,
    "rotateSpeed": 0.5,
    "particleSize": 20.0
  },

  "debug": {
    "enableDebugLayer": false,
    "logLevel": "info",
    "enablePIX": false,
    "showFPS": true,
    "showParticleStats": true
  },

  "screenshot": {
    "_comment": "Automated screenshot capture for comparison",
    "autoCapture": false,
    "captureFrame": 120,
    "outputPrefix": "hybrid_",
    "outputFormat": "bmp"
  },

  "performance": {
    "_comment": "Target metrics for hybrid approach",
    "targetFPS": 90,
    "expectedQuality": 0.90,
    "_qualityNote": "90% of multi-light scattering quality with +25% FPS improvement"
  }
}
